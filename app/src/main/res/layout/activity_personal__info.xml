<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Personal_Info"
    android:background="@drawable/gradient3">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/cacharcollege"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        />
    <ProgressBar
        android:id="@+id/pBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/teacherCollege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_margin="5dp"
        android:editable="false"
        android:focusable="false"
        android:textSize="15sp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:textColor="#FEFEFF"/>

    <TextView
        android:id="@+id/teacherDept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:inputType="textPersonName"
        android:textStyle="italic"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:textColor="#FEFEFF"
        android:clickable="false"
        android:editable="false"
        android:focusable="false"/>

    <TextView
        android:id="@+id/teacherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FEFEFF"
        android:clickable="false"
        android:editable="false"
        android:focusable="false"/>

    <TextView
        android:id="@+id/teacherEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="15sp"
        android:textAllCaps="true"
        android:textColor="#FEFEFF"
        android:clickable="false"
        android:editable="false"
        android:focusable="false"/>
    <TextView
        android:id="@+id/teacherPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#FEFEFF"
        android:clickable="false"
        android:editable="false"
        android:focusable="false"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/exitWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/button_border"
        android:text="Exit Profile Window"
        android:textColor="#0E0E0E"
        android:textStyle="bold"
        android:textSize="25sp"/>
</LinearLayout>